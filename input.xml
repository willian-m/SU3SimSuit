<?xml version="1.0"?>
<input_parameters> <!--Wrapping tag because xml only accepts one root-->
    <lattice>
        <nx>8</nx>
        <ny>8</ny>
        <nz>8</nz>
        <nt>12</nt>
        <beta>5.70</beta>
    </lattice>
    <ensamble>
        <latt_init>H</latt_init> <!-- Use any word starting with H for hot start 
                                      and starting with C for cold start. Use a filepath
                                      to load a lattice configuration-->
        <number_MC_steps>5000</number_MC_steps>
        <thermalization>0</thermalization>
        <measurement_step>2</measurement_step>
    </ensamble>
    <EMT_correlation>
        <mu>4</mu>
        <nu>1</nu>
        <rho>4</rho>
        <sigma>1</sigma>
    </EMT_correlation>
</input_parameters>
