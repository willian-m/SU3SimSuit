<?xml version="1.0"?>
<input_parameters> <!--Wrapping tag because xml only accepts one root-->
    <lattice>
        <nx>32</nx>
        <ny>32</ny>
        <nz>32</nz>
        <nt>6</nt>
        <beta>7.0</beta>
    </lattice>
    <ensamble>
        <latt_init>H</latt_init> <!-- Use any word starting with H for hot start 
                                      and starting with C for cold start. Use a filepath
                                      to load a lattice configuration-->
        <number_MC_steps>10000</number_MC_steps>
        <thermalization>100</thermalization>
        <measurement_step>10</measurement_step>
    </ensamble>
    <EMT_correlation>
        <mu>4</mu>
        <nu>2</nu>
        <rho>4</rho>
        <sigma>2</sigma>
    </EMT_correlation>
</input_parameters>
